@model Cumulative1.Models.Course

<style>
    /* Body styling */
    body {
        font-family: Arial, sans-serif;
        background-color: #f4f7fc;
        margin: 0;
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh; /* Full height for centering */
        flex-direction: column;
        padding: 20px;
    }

    /* Header Styling */
    .header {
        text-align: center;
        color: #333;
        margin-bottom: 40px;
    }

        .header h1 {
            font-size: 32px;
            font-weight: 700;
            color: #007bff;
            letter-spacing: 2px;
        }

        .header p {
            font-size: 18px;
            color: #555;
        }

    /* Form styling */
    form {
        background-color: #fff;
        padding: 30px 40px;
        border-radius: 12px;
        box-shadow: 0 8px 20px rgba(0, 0, 0, 0.1);
        width: 100%;
        max-width: 600px;
    }

    h2 {
        text-align: center;
        color: #333;
        font-size: 24px;
        margin-bottom: 30px;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 1px;
    }

    div {
        margin-bottom: 20px;
    }

    label {
        display: block;
        font-size: 16px;
        color: #555;
        margin-bottom: 8px;
        font-weight: bold;
    }

    input[type="text"], input[type="date"] {
        width: 100%;
        padding: 12px;
        font-size: 16px;
        border: 1px solid #ddd;
        border-radius: 8px;
        box-sizing: border-box;
        background-color: #f9f9f9;
        transition: border-color 0.3s ease;
    }

        input[type="text"]:focus, input[type="date"]:focus {
            border-color: #007bff;
            outline: none;
            background-color: #ffffff;
        }

    input[type="submit"] {
        background-color: #007bff;
        color: white;
        font-size: 18px;
        padding: 14px 20px;
        border: none;
        border-radius: 8px;
        width: 100%;
        cursor: pointer;
        transition: background-color 0.3s, transform 0.2s ease;
    }

        input[type="submit"]:hover {
            background-color: #0056b3;
            transform: scale(1.05); /* Button slightly enlarges on hover */
        }

    /* Footer styling */
    .footer {
        text-align: center;
        margin-top: 40px;
        font-size: 14px;
        color: #777;
    }

        .footer a {
            color: #007bff;
            text-decoration: none;
        }

            .footer a:hover {
                color: #0056b3;
            }

 

    form {
        padding: 20px;
    }

    input[type="submit"] {
        padding: 12px 16px;
    }

    }
</style>

<!-- Header Section -->
<div class="header">
    <h1>Course Management</h1>
    <p>Fill in the form below to create a new course.</p>
</div>

<!-- Form content -->
<form method="post" action="/CoursePage/Create">
    <h2>Create Course</h2>
    <div>
        <label for="Ccode">Course Code:</label>
        <input type="text" id="Ccode" name="Ccode" required />
    </div>
    <div>
        <label for="Tid">Teacher Id:</label>
        <input type="text" id="Tid" name="Tid" required />
    </div>
    <div>
        <label for="Cname">Course Name:</label>
        <input type="text" id="Cname" name="Cname" required />
    </div>
    <div>
        <label for="startdate">Start Date:</label>
        <input type="date" id="startdate" name="startdate" required />
    </div>
    <div>
        <label for="finshdate">Finish Date:</label>
        <input type="date" id="finshdate" name="finshdate" required />
    </div>
    <div>
        <input type="submit" value="Create Course" />
    </div>
</form>

<!-- Footer Section -->
<div class="footer">
    <p>&copy; 2024 Course Management System | <a href="/Home/Privacy">Privacy Policy</a></p>
</div>
