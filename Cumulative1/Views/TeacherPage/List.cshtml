@model IEnumerable<Cumulative1.Models.Teacher>

<style>
    body {
        font-family: Arial, Helvetica, sans-serif;
        background-color: #f4f7f6;
        margin: 0;
        padding: 20px;
    }

    .container {
        max-width: 950px;
        margin: 0 auto;
        background-color: #ffffff;
        padding: 20px;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    h1 {
        color: #333;
        font-size: 32px;
        text-align: center;
        margin-bottom: 20px;
    }

    .add-button {
        display: inline-block;
        background-color:blue;
        color: #fff;
        padding: 10px 20px;
        font-size: 15px;
        font-weight: bold;
        text-decoration: none;
        border-radius: 6px;
        transition: background-color 0.3s ease, transform 0.2s ease;
        margin-bottom: 25px;
        box-shadow: 0 4px 12px rgba(40, 167, 69, 0.2);
    }

        .add-button:hover {
            background-color:blue;
            transform: scale(1.05);
            text-decoration: none;
        }

    .filter-form {
        display: flex;
        justify-content: space-between;
        background-color: #ffffff;
        padding: 15px;
        margin-bottom: 30px;
        border-radius: 6px;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
    }

        .filter-form div {
            margin: 15px;
            flex: 1;
            display: flex;
            flex-direction: column;
        }

        .filter-form label {
            font-size: 14px;
            font-weight: bold;
            margin-bottom: 5px;
            color: #333;
        }

        .filter-form input[type="date"] {
            width: 100%;
            padding: 8px;
            font-size: 14px;
            border: 1px solid #ccc;
            border-radius: 4px;
        }

        .filter-form input[type="submit"] {
            width: 100%;
            padding: 10px;
            font-size: 14px;
            border: none;
            border-radius: 4px;
            background-color: #007BFF;
            color: white;
            font-weight: bold;
            cursor: pointer;
            margin-top: 20px;
        }

            .filter-form input[type="submit"]:hover {
                background-color: #0056b3;
            }

    h3 {
        color: #333;
        font-size: 24px;
        margin-bottom: 15px;
        text-align: center;
    }

    .teacher-list {
        width: 100%;
        border-collapse: collapse;
        margin-top: 20px;
        border-radius: 8px;
        overflow: hidden;
    }

        .teacher-list th,
        .teacher-list td {
            padding: 12px;
            border: 1px solid #ddd;
            text-align: left;
            font-size: 16px;
            font-family: 'Arial', sans-serif;
        }

        .teacher-list th {
            background-color: #007BFF;
            color: white;
            font-weight: bold;
            font-size: 18px;
        }

        .teacher-list tr:nth-child(even) {
            background-color: #e9f5ff;
        }

        .teacher-list tr:hover {
            background-color: #cce5ff;
        }

    .teacher-name {
        color: #007BFF;
        text-decoration: none;
        font-weight: bold;
    }

        .teacher-name:hover {
            text-decoration: underline;
        }
</style>

<div class="container">
    <h1>Search Teachers by Hire Date</h1>

    <a href="/TeacherPage/New" class="add-button">➕ Add Teacher</a>

    <form method="GET" action="/TeacherPage/List" class="filter-form">
        <div>
            <label for="StartDate">Start Date:</label>
            <input type="date" name="StartDate" required />
        </div>
        <div>
            <label for="EndDate">End Date:</label>
            <input type="date" name="EndDate" required />
        </div>
        <div>
            <input type="submit" value="Search" />
        </div>
    </form>

    <h3>Teacher List</h3>

    <table class="teacher-list">
        <thead>
            <tr>
                <th>Name</th>
                <th>Employee Number</th>
                <th>Hire Date</th>
                <th>Salary</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var teacher in Model)
            {
                <tr>
                    <td>@teacher.TeacherFName @teacher.TeacherLName</td>
                    <td>@teacher.EmployeeNumber</td>
                    <td>@teacher.Hire.ToString("yyyy-MM-dd")</td>
                    <td>$@teacher.Salary.ToString()</td>
                    <td>
                        <a href="/TeacherPage/Show/@teacher.TeacherId" class="teacher-name">View Profile</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
